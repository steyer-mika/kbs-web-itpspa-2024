@model KBS_FunEvents_Web_2024.ViewModels.DashboardModelView

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<br />
<hr />
<br />

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
            <div class="card">
                <div class="card-header">
                    <p class="card-title text-center">Anzahl durchgeführte Events:</p>
                </div>
                <div class="card-body">
                    <p id="counterFinishedEvents" class="card-text text-center">@Html.DisplayFor(d => d.NumDurchgefuehrteEvents)</p>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">

            <div class="card">
                <div class="card-header">
                    <p class="card-title text-center">Anzahl aktive Buchungen:</p>
                </div>
                <div class="card-body">
                    <p id="counterActiveBookings" class="card-text text-center">@Html.DisplayFor(d => d.NumAktiveBuchungen)</p>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
            <div class="card">
                <div class="card-header">
                    <p class="card-title text-center">Anzahl stornierte Events:</p>
                </div>
                <div class="card-body">
                    <p id="counterCanceledEvents" class="card-text text-center">@Html.DisplayFor(d => d.NumStornierteBuchungen)</p>
                </div>
            </div>
        </div>
    </div>
</div>

<br />
<hr />
<br />

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6">

            <div class="card">
                <div class="card-body">
                    <h2 id="eventCardTitle" class="card-title">Ihr Event am @Model.EdBeginn.Date.ToString("dd.MM.yyyy")</h2>
                    <h3 id="eventCardSubtitle" class="card-subtitle"> @Html.DisplayFor(d => d.EtBezeichnung)</h3>
                    <p id="eventCardText" class="card-text"> @Html.DisplayFor(d => d.EtBeschreibung)</p>
                    <br />
                    <a id="eventCardBtnDetails" class="card-footer" href="~/Details">Zu den Details...</a>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 id="searchEventCardTitle" class="card-title">Event suchen</h2>
                    <h3 id="searchEventCardSubtitle" class="card-subtitle">Weiteres Abenteuer starten</h3>
                    <p id="searchEventCardText" class="card-text">Ihr nächstes Event wartet bereits auf Sie! Sehen Sie sich die aktuelen Veranstaltungen an und starten Sie ein neues Abenteuer.</p>
                    <br />
                    <a id="eventCardBtnEvents" class="card-footer" href="~/Events">Zu den Events...</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
