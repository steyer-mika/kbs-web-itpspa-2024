@model KBS_FunEvents_Web_2024.ViewModels.EventOverviewViewModel

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<div>
    <h4>Aktuelle Termine</h4>
    <hr />
    @foreach (var item in Model.eventViewModels)
    {
        <hr />
        <div class="container">
            <div class="row">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Eventbezeichnung</th>
                                <th scope="col">Beginn des Events</th>
                                <th scope="col">Standort des Events</th>
                                <th scope="col">Preis pro Teilnehmer</th>
                                <th scope="col">Freie Plätze</th>
                                <th scope="col">Sie wollen teilnehmen?</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                
                            </tr>
                        </tbody>
                    </table>
            </div>
            <a href="#"> Zurück  zur Eventübersicht</a>
        </div>
       
          
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => item.EtBezeichnung)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.EtBezeichnung)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => item.EdPreis)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.EdPreis)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => item.EdBeginn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.EdBeginn)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => item.EdStartOrt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.EdStartOrt)
            </dd>
        </dl>
        <div>
            <a asp-action="Edit" asp-route-id="@item.EtEventId">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    }

</div>

