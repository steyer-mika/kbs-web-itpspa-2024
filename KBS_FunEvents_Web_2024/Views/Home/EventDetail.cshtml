@{
    ViewData["Title"] = "EventDetails";
}
@model IEnumerable<KBS_FunEvents_Web_2024.Models.TblEventDaten>
<div class="text-center">

    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }

        h1 {
            text;
        }

        .container {
            text-align: left;
        }
    </style>

    <div class="container">
        <h1>Aktuelle Termine</h1>

        <table>
            <thead>
                <tr>
                    <th>Eventbezeichnung</th>
                    <th>Beginn des Events</th>
                    <th>Startort des Events</th>
                    <th>Preis pro Teilnehmer</th>
                    <th>Freie Plätze</th>
                    <th>Sie wollen teilnehmen?</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(itemModel => item.EtEvent.EtBezeichnung)
                        </td>

                        <td>
                            @Html.DisplayFor(itemModel => item.EdBeginn)
                        </td>
                        <td>
                            @Html.DisplayFor(itemModel => item.EdStartOrt)
                        </td>
                        <td>
                            @Html.DisplayFor(itemModel => item.EdPreis)
                        </td>
                        <td>
                            @Html.DisplayFor(itemModel => item.EdMaxTeilnehmer)
                        </td>
                        <td><button>Login</button> | <button>Registrieren</button></td>
                    </tr>
                }
                </tbody>
        </table>
       
        <br />
        <a class="nav-link text-dark" asp-controller="Home" asp-action="GetEvents">Zurück zur Eventübersicht</a>


    </div>
</div>
