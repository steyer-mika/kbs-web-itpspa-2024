@{
    ViewData["Title"] = "EventDetails";
}
@model IEnumerable<KBS_FunEvents_Web_2024.Models.TblEventDaten>
<div>
    <h1>Aktuelle Termine</h1>
    <hr />
    @if (Model.Any())
    {
        <table class="table notopborder">
            <thead>
                <tr>
                    <th>Eventbezeichnung</th>
                    <th>Beginn des Events</th>
                    <th>Startort des Events</th>
                    <th>Preis pro Teilnehmer</th>
                    <th>Freie Plätze</th>
                    <th>Sie wollen teilnehmen?</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(itemModel => item.EtEvent.EtBezeichnung)
                        </td>

                        <td>
                            @Html.DisplayFor(itemModel => item.EdBeginn)
                        </td>
                        <td>
                            @Html.DisplayFor(itemModel => item.EdStartOrt)
                        </td>
                        <td>
                            @Html.DisplayFor(itemModel => item.EdPreis)
                        </td>
                        <td>
                            @Html.DisplayFor(itemModel => item.EdMaxTeilnehmer)
                        </td>
                        <td>
                            <a asp-controller="Home" asp-action="Login">Login</a> | <a asp-controller="Home" asp-action="Registration">Registrieren</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-controller="Home" asp-action="GetEvents">Zurück zur Eventübersicht</a>
    }
    else
    {
        <p class="text-danger">Aktuell gibt es leider keine Termine zu diesem Event!</p>
    }
</div>
